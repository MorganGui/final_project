{% extends 'base.html.twig' %}

{% block title %}Créer un message{% endblock %}

{% block body %}
    <h1>Créer un message</h1>

    <div class="form-wrapper">
        {{ form_start(createMessage) }}
        {{ form_row(createMessage.content) }}
        {{ form_row(createMessage.attachmentFile, {'label': 'Pièce jointe'}) }}
        {{ form_end(createMessage) }}
    </div>

    <style>
        .form-wrapper {
            max-width: 500px;
            margin: auto;
            background-color: #f9f9f9;
            border-radius: 5px;
            padding: 20px;
        }

        input[type=text], input[type=file], textarea {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border: none;
            border-bottom: 2px solid #ccc;
            transition: 0.5s;
            outline: none;
        }
    </style>
{% endblock %}
